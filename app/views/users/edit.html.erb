<h1> Edit User </h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <li class="error-msg"><%= message %></li>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label :username, "Username:" %>
  <%= f.text_field :username, value: "user1" %><br>

  <%= f.label :email, "Email:" %>
  <%= f.email_field :email, placeholder: "example@example.com" %><br>

  <%= f.label :password, "Password:" %>
  <%= f.password_field :password%><br>

  <%= f.submit "Update User", class: "submit" %>

<% end %>
